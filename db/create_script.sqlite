	limbid 		INTEGER PRIMARY KEY, 
	status 		INTEGER, 
	name		TEXT, 
	person 		INTEGER, 
	FOREIGN KEY (person) REFERENCES person(personid)
) 

CREATE TABLE quest ( I	
	questid		INTEGER PRIMARY KEY, 
